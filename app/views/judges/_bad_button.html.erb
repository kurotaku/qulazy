<% if current_user.bad?(post) %>
  <%= form_tag(judge_path(post.id), method: :delete) do %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= hidden_field_tag :type, 'Bad' %>
    <%= submit_tag 'Un bood', class: 'btn btn-danger' %>
  <% end %>
<% else %>
  <%= form_tag(judges_path) do %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= hidden_field_tag :type, 'Bad' %>
    <%= submit_tag 'Bad', class: 'btn btn-danger' %>
  <% end %>
<% end %>