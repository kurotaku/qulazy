<% if posts.any? %>
  <ul>
    <% posts.each do |post| %>
      <li>
        <h4><%= link_to post.title, post_path(post) %></h4>
        <p><%= simple_format(post.fact) %></p>
        <p>投稿者：<%= link_to '@' + post.user.username, user_path(post.user) %></p>
        <%= render 'judge_form', post: post %>
        <hr />
      </li>
    <% end %>
  </ul>
<% else %>
  <p>投稿はまだありません</p>
  <p><%= not_found.title %>(<%= not_found.point %>)</p>
<% end %>