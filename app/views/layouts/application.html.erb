<!DOCTYPE html>
<html>
  <head>
    <title>Qulazy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1><%= link_to 'Qulazy', root_path %></h1>
    </header>
    <main>
      <%= render 'layouts/flash_messages' %>
      <%= yield %>
    </main>
    <footer>
      <nav>
        <ul>
          <li><%= link_to 'データーベース図', dbmap_path %></li>
          <li><%= link_to '完成イメージ', capture_path %></li>
          <li><%= link_to '課題', task_path %></li>
          <li><%= link_to 'ユーザー登録', signup_path %></li>
          <% if logged_in? %>
            <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
            <li><%= link_to 'プロフィール', user_path(current_user) %></li>
            <li><%= link_to '投稿する', new_post_path %></li>
            <li><%= link_to 'ユーザー一覧', users_path %></li>
            <li><%= link_to '自分の投稿一覧', posts_user_path(current_user) %></li>
          <% else %>
            <li><%= link_to 'ログイン', login_path %></li>
          <% end %>
        </ul>
      </nav>
    </footer>
  </body>
</html>
