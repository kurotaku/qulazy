<%= form_for(@post) do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>
  
  <%= f.hidden_field :post_point, value: 0  %>

  <div class="form-group">
    <%= f.label :title, 'title' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :fact, 'fact' %>
    <%= f.text_area :fact, class: 'form-control', rows: 5 %>
  </div>
  
  <div class="form-group">
    <%= f.label :opinion, 'opinion' %>
    <%= f.text_area :opinion, class: 'form-control', rows: 5 %>
  </div>
  
  <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
<% end %>